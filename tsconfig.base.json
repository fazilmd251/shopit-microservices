{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "paths": {
      "@packages/*": [
        "packages/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./packages/shared/types"
    ],
    "customConditions": [
      "development"
    ]
  }
}
