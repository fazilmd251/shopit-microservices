FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system shopit-auth-service && \
          adduser --system -G shopit-auth-service shopit-auth-service

COPY apps/auth-service/dist shopit-auth-service/
COPY apps/auth-service/package.json shopit-auth-service/
RUN chown -R shopit-auth-service:shopit-auth-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix shopit-auth-service --omit=dev -f install

CMD [ "node", "shopit-auth-service" ]
